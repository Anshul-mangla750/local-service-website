<%- include('../partials/header', { title: 'Bookings Management' }) %>

<div class="row mb-4">
  <div class="col-md-12">
    <h2 class="mb-4"><i class="fas fa-calendar-alt"></i> Bookings Management</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-list"></i> All Bookings</h5>
      </div>
      <div class="card-body">
        <% if (bookings.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th><i class="fas fa-tools"></i> Service</th>
                  <th><i class="fas fa-user"></i> Customer</th>
                  <th><i class="fas fa-calendar"></i> Date</th>
                  <th><i class="fas fa-clock"></i> Time</th>
                  <th><i class="fas fa-sticky-note"></i> Notes</th>
                  <th><i class="fas fa-info-circle"></i> Status</th>
                  <th><i class="fas fa-cogs"></i> Actions</th>
                </tr>
              </thead>
              <tbody>
                <% bookings.forEach(b => { %>
                  <tr>
                    <td><%= b.serviceId.title %></td>
                    <td><%= b.userId.username %></td>
                    <td><%= new Date(b.date).toLocaleDateString() %></td>
                    <td><%= b.time %></td>
                    <td><%= b.notes || "-" %></td>
                    <td>
                      <% if (b.status === 'pending') { %>
                        <span class="badge bg-warning text-dark"><%= b.status %></span>
                      <% } else if (b.status === 'accepted') { %>
                        <span class="badge bg-info"><%= b.status %></span>
                      <% } else if (b.status === 'completed') { %>
                        <span class="badge bg-success"><%= b.status %></span>
                      <% } else if (b.status === 'rejected') { %>
                        <span class="badge bg-danger"><%= b.status %></span>
                      <% } else { %>
                        <span class="badge bg-secondary"><%= b.status %></span>
                      <% } %>
                    </td>
                    <td>
                      <form method="POST" action="/dashboard/bookings/<%= b._id %>/status?_method=PUT" class="d-flex">
                        <select name="status" class="form-select form-select-sm me-2">
                          <option value="pending" <%= b.status==='pending'?'selected':'' %>>Pending</option>
                          <option value="accepted" <%= b.status==='accepted'?'selected':'' %>>Accepted</option>
                          <option value="rejected" <%= b.status==='rejected'?'selected':'' %>>Rejected</option>
                          <option value="completed" <%= b.status==='completed'?'selected':'' %>>Completed</option>
                        </select>
                        <button class="btn btn-sm btn-primary"><i class="fas fa-save"></i> Update</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center">
            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
            <p class="text-muted">No bookings found.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
