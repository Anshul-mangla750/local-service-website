<%- include('../partials/header', { title: 'Earnings / Analytics' }) %>

<div class="row mb-4">
  <div class="col-md-12">
    <h2 class="mb-4"><i class="fas fa-chart-line"></i> Earnings / Analytics</h2>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-calendar fa-2x text-info mb-2"></i>
        <h6>Total Bookings</h6>
        <h3 class="text-info"><%= totalBookings %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
        <h6>Completed</h6>
        <h3 class="text-success"><%= completedBookings %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-clock fa-2x text-warning mb-2"></i>
        <h6>Pending</h6>
        <h3 class="text-warning"><%= pendingBookings %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-rupee-sign fa-2x text-primary mb-2"></i>
        <h6>Total Revenue</h6>
        <h3 class="text-primary">₹<%= totalRevenue.toFixed(2) %></h3>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-6">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-star fa-2x text-warning mb-2"></i>
        <h6>Average Rating</h6>
        <h3 class="text-warning"><%= feedbackSummary.averageRating ? feedbackSummary.averageRating.toFixed(1) : 'N/A' %></h3>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-comments fa-2x text-info mb-2"></i>
        <h6>Total Reviews</h6>
        <h3 class="text-info"><%= feedbackSummary.totalFeedbacks %></h3>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card shadow-sm">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-tools"></i> Services Performance</h5>
      </div>
      <div class="card-body">
        <% if (services.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th><i class="fas fa-wrench"></i> Service</th>
                  <th><i class="fas fa-rupee-sign"></i> Price</th>
                </tr>
              </thead>
              <tbody>
                <% services.forEach(s => { %>
                  <tr>
                    <td><%= s.title %></td>
                    <td>₹<%= s.price %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center">
            <i class="fas fa-tools fa-3x text-muted mb-3"></i>
            <p class="text-muted">No services listed yet.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
