<%- include('../partials/header', { title: 'Profile Settings' }) %>

<h2 class="mb-4">Profile Settings</h2>

<form method="POST" action="/dashboard/settings?_method=PUT" class="col-md-6">
  <div class="mb-3">
    <label for="contactNumber" class="form-label">Contact Number</label>
    <input type="text" name="contactNumber" id="contactNumber" class="form-control" value="<%= user.contactNumber || '' %>">
  </div>

  <div class="mb-3">
    <label for="workingHours" class="form-label">Working Hours</label>
    <input type="text" name="workingHours" id="workingHours" class="form-control" value="<%= user.workingHours || '' %>">
  </div>

  <div class="mb-3">
    <label for="bio" class="form-label">About / Bio</label>
    <textarea name="bio" id="bio" rows="3" class="form-control"><%= user.bio || '' %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<%- include('../partials/footer') %>
