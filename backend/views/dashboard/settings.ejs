<%- include('../partials/header', { title: 'Profile Settings' }) %>

<div class="row mb-4">
  <div class="col-md-12">
    <h2 class="mb-4"><i class="fas fa-user-cog"></i> Profile Settings</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card shadow-sm">
      <div class="card-header bg-warning text-white">
        <h5 class="mb-0"><i class="fas fa-edit"></i> Update Your Profile</h5>
      </div>
      <div class="card-body">
        <form method="POST" action="/dashboard/settings?_method=PUT">
          <div class="mb-3">
            <label for="contactNumber" class="form-label"><i class="fas fa-phone"></i> Contact Number</label>
            <input type="text" name="contactNumber" id="contactNumber" class="form-control" value="<%= user.contactNumber || '' %>" placeholder="Enter your contact number">
          </div>

          <div class="mb-3">
            <label for="workingHours" class="form-label"><i class="fas fa-clock"></i> Working Hours</label>
            <input type="text" name="workingHours" id="workingHours" class="form-control" value="<%= user.workingHours || '' %>" placeholder="e.g., 9 AM - 6 PM">
          </div>

          <div class="mb-3">
            <label for="bio" class="form-label"><i class="fas fa-info-circle"></i> About / Bio</label>
            <textarea name="bio" id="bio" rows="4" class="form-control" placeholder="Tell customers about yourself and your services"><%= user.bio || '' %></textarea>
          </div>

          <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-user"></i> Profile Info</h5>
      </div>
      <div class="card-body">
        <p><strong>Username:</strong> <%= user.username %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Role:</strong> <%= user.role %></p>
        <p><strong>Member Since:</strong> <%= new Date(user.createdAt).toLocaleDateString() %></p>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
