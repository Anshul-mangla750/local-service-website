<% layout('/layouts/boilerplate.ejs') -%>

<style>
  .error-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
  }

  .error-card {
    background: var(--bg-white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-xl);
    border: none;
    overflow: hidden;
    max-width: 500px;
    width: 100%;
    margin: 1rem;
    text-align: center;
  }

  .error-header {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    color: white;
    padding: 3rem 2rem;
    position: relative;
  }

  .error-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
  }

  .error-icon {
    font-size: 5rem;
    color: rgba(255,255,255,0.9);
    margin-bottom: 1rem;
    position: relative;
    z-index: 1;
  }

  .error-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    position: relative;
    z-index: 1;
  }

  .error-subtitle {
    font-size: 1.1rem;
    margin: 0.5rem 0 0 0;
    opacity: 0.9;
    position: relative;
    z-index: 1;
  }

  .error-body {
    padding: 2.5rem;
  }

  .error-message {
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-error {
    background: var(--primary-gradient);
    border: none;
    border-radius: var(--border-radius);
    padding: 0.875rem 2rem;
    font-weight: 600;
    font-size: 1rem;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-error::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.5s ease;
  }

  .btn-error:hover::before {
    left: 100%;
  }

  .btn-error:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-error-outline {
    background: transparent;
    border: 2px solid var(--primary-color);
    color: var(--primary-color);
  }

  .btn-error-outline:hover {
    background: var(--primary-color);
    color: white;
  }

  .error-details {
    background: #f8f9fa;
    border-radius: var(--border-radius);
    padding: 1.5rem;
    margin-top: 2rem;
    border-left: 4px solid #ff6b6b;
  }

  .error-details h5 {
    color: #ff6b6b;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .error-code {
    font-family: 'Courier New', monospace;
    background: #e9ecef;
    padding: 0.5rem;
    border-radius: 4px;
    font-size: 0.9rem;
    color: #495057;
  }

  @media (max-width: 576px) {
    .error-container {
      padding: 1rem;
    }

    .error-card {
      margin: 0.5rem;
    }

    .error-header {
      padding: 2rem 1.5rem;
    }

    .error-body {
      padding: 2rem 1.5rem;
    }

    .error-actions {
      flex-direction: column;
    }

    .btn-error {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<div class="error-container">
  <div class="error-card">
    <div class="error-header">
      <i class="fas fa-exclamation-triangle error-icon"></i>
      <h1 class="error-title">Oops!</h1>
      <p class="error-subtitle">Something went wrong</p>
    </div>
    <div class="error-body">
      <div class="error-message">
        <% if (typeof message !== 'undefined' && message) { %>
          <%= message %>
        <% } else { %>
          We're sorry, but the page you're looking for cannot be found or an unexpected error occurred.
        <% } %>
      </div>

      <div class="error-actions">
        <a href="/" class="btn btn-error">
          <i class="fas fa-home"></i>
          Go Home
        </a>
        <a href="javascript:history.back()" class="btn btn-error-outline">
          <i class="fas fa-arrow-left"></i>
          Go Back
        </a>
      </div>

      <% if (typeof error !== 'undefined' && error && process.env.NODE_ENV === 'development') { %>
        <div class="error-details">
          <h5><i class="fas fa-bug me-2"></i>Debug Information</h5>
          <div class="error-code">
            <strong>Status:</strong> <%= error.status || 'Unknown' %><br>
            <strong>Message:</strong> <%= error.message || 'No message available' %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
