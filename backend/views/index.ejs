<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <div class="container">
    <!-- Search and Filter Form -->
    <div class="row mb-4">
      <div class="col-md-12">
        <form method="GET" action="/services" class="d-flex align-items-center">
          <div class="me-3">
            <input
              type="text"
              name="search"
              class="form-control"
              placeholder="Search services..."
              value="<%= search || '' %>"
            />
          </div>
          <div class="me-3">
            <select name="category" class="form-select">
              <option value="">All Categories</option>
              <% categories.forEach(cat => { %>
                <option value="<%= cat %>" <%= category === cat ? 'selected' : '' %>><%= cat %></option>
              <% }); %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary me-2">Search</button>
          <a href="/services" class="btn btn-secondary">Clear</a>
        </form>
      </div>
    </div>

    <% if(category){ %>
      <h2>Services in category: <%= category %></h2>
      <a href="/services">View all services</a>
    <% } else { %>
      <h2>All Services</h2>
    <% } %>
    <div class="row">
      <% for(service of services){ %>
      <div class="card" style="width: 18rem">
        <a href="/services/<%= service._id %>">
          <img
            src="<%= service.image.url %>"
            class="card-img-top"
            alt="service image"
          />
        </a>
        <div class="card-body">
          <h5 class="card-title"><%=service.title%></h5>
          <p class="card-text"><%=service.description%></p>
        </div>

        <div class="card-body">
          <a href="/services/<%=service._id%>" class="btn btn-primary"
            >details</a
          >
          <a href="/services/<%=service._id%>/book" class="btn btn-primary"
            >book now</a
          >
        </div>
      </div>

      <% } %>
    </div>
  </div>
  <% if(currUser && currUser.role === 'provider'){ %>
  <form action="/services/new" method="GET">
    <button>create new service</button>
  </form>
  <% } %>

  <img
    src="https://unsplash.com/photos/working-contractor-electrician-fixing-the-light-fsBhBDjxT-4"
    alt=""
  />
</body>
