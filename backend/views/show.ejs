<% layout('/layouts/boilerplate.ejs') -%>
<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="service-card card">
        <% if (service.image && service.image.url) { %>
          <img src="<%= service.image.url %>" class="card-img-top service-image" alt="service image">
        <% } %>
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="owner-badge">
              <i class="fas fa-user"></i> <%= (service.owner && service.owner.username) ? service.owner.username : 'Unknown Provider' %>
            </div>
            <div class="price-badge">
              <i class="fas fa-rupee-sign"></i> <%= service.price %>
            </div>
          </div>

          <h3 class="card-title mb-3"><%= service.title %></h3>
          <p class="card-text lead mb-4"><%= service.description %></p>

          <!-- Average Rating Display -->
          <% if (averageRating > 0) { %>
            <div class="mb-4">
              <div class="d-flex align-items-center">
                <strong class="me-3">Average Rating:</strong>
                <div class="rating-stars">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <i class="fas fa-star <%= i <= Math.round(averageRating) ? 'text-warning' : 'text-muted' %>"></i>
                  <% } %>
                </div>
                <span class="ms-2 fw-bold"><%= averageRating.toFixed(1) %> / 5</span>
                <small class="text-muted ms-2">(<%= reviews.length %> reviews)</small>
              </div>
            </div>
          <% } %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Starting from: ₹<%= service.price %></li>
          <li class="list-group-item">Location: <%= service.location %></li>
          <li class="list-group-item">Category: <%= service.category %></li>
        </ul>
        <div class="card-body">
          
             <% if (currUser && currUser._id.equals(service.owner._id)) { %>
            <div class="d-flex justify-content-between">
              <a href="/services/<%= service._id %>/edit" class="btn btn-primary">Edit</a>
              <form action="/services/<%= service._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-custom" onclick="return confirm('Are you sure you want to delete this service?')">
                  <i class="fas fa-trash me-2"></i>Delete
                </button>
              </form>
            </div>
          <% } else if (currUser) { %>
            <a href="/services/<%= service._id %>/book" class="btn btn-success btn-custom w-100">
              <i class="fas fa-calendar-check me-2"></i>Book Now
            </a>
          <% } else { %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>Please <a href="/login" class="alert-link">login</a> to book this service.
            </div>
          <% } %>
        </div>
      </div>

      <!-- Reviews Section -->
      <div class="reviews-card card mt-5">
        <div class="card-header bg-gradient-primary text-white">
          <h4 class="mb-0">
            <i class="fas fa-comments me-2"></i>Customer Reviews
            <span class="badge bg-light text-dark ms-2"><%= reviews.length %></span>
          </h4>
        </div>
        <div class="card-body">
          <% if (reviews.length > 0) { %>
            <% reviews.forEach(review => { %>
              <div class="review-item">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div class="d-flex align-items-center">
                    <div class="avatar-circle bg-primary text-white me-3" style="width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                      <%= review.bookingId.userId.username.charAt(0).toUpperCase() %>
                    </div>
                    <div>
                      <strong><%= review.bookingId.userId.username %></strong>
                      <div class="rating-stars">
                        <% for (let i = 1; i <= 5; i++) { %>
                          <i class="fas fa-star <%= i <= review.rating ? 'text-warning' : 'text-muted' %>"></i>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  <small class="text-muted">
                    <i class="fas fa-calendar-alt me-1"></i><%= new Date(review.createdAt).toLocaleDateString() %>
                  </small>
                </div>
                <p class="mb-0"><%= review.comment %></p>
              </div>
            <% }) %>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fas fa-comments text-muted" style="font-size: 3rem;"></i>
              <p class="text-muted mt-3">No reviews yet. Be the first to review after completing a booking!</p>
            </div>
          <% } %>

          <!-- Add Review Form (only for eligible users) -->
          <% if (canReview) { %>
            <div class="mt-4 p-4 bg-light rounded">
              <h5 class="mb-3">
                <i class="fas fa-pen me-2"></i>Write a Review
              </h5>
              <form method="POST" action="/services/<%= service._id %>/reviews">
                <div class="mb-3">
                  <label for="rating" class="form-label fw-bold">Your Rating</label>
                  <select name="rating" id="rating" class="form-select" required>
                    <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
                    <option value="4">⭐⭐⭐⭐ Very Good</option>
                    <option value="3">⭐⭐⭐ Good</option>
                    <option value="2">⭐⭐ Fair</option>
                    <option value="1">⭐ Poor</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label fw-bold">Your Review</label>
                  <textarea name="comment" id="comment" class="form-control" rows="4" placeholder="Share your experience with this service..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-custom">
                  <i class="fas fa-paper-plane me-2"></i>Submit Review
                </button>
              </form>
            </div>
          <% } else if (currUser && currUser.role === 'customer') { %>
            <div class="mt-4 p-3 bg-info bg-opacity-10 rounded border border-info">
              <i class="fas fa-info-circle text-info me-2"></i>
              Complete a booking for this service to leave a review.
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
 