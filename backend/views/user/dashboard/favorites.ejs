<%- include('./layout', { title: 'Favorite Services' }) %>

<div class="row mb-4">
  <div class="col-md-12">
    <h2 class="mb-4"><i class="fas fa-heart"></i> My Favorite Services</h2>
  </div>
</div>

<div class="row">
  <% if (favoriteServices.length > 0) { %>
    <% favoriteServices.forEach(s => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <% if (s.image && s.image.url) { %>
            <img src="<%= s.image.url %>" class="card-img-top" alt="<%= s.title %>" style="height: 200px; object-fit: cover;">
          <% } else { %>
            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fas fa-image fa-3x text-muted"></i>
            </div>
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= s.title %></h5>
            <p class="card-text text-muted"><%= s.description %></p>
            <p class="card-text"><strong>â‚¹<%= s.price %></strong></p>
            <p class="card-text"><small class="text-muted"><%= s.location %></small></p>
            <div class="d-flex justify-content-between">
              <a href="/services/<%= s._id %>" class="btn btn-primary">View Details</a>
              <form method="POST" action="/user/dashboard/favorites/<%= s._id %>?_method=DELETE" class="d-inline">
                <button type="submit" class="btn btn-outline-danger">
                  <i class="fas fa-heart-broken"></i> Remove
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-md-12">
      <div class="text-center">
        <i class="fas fa-heart-broken fa-5x text-muted mb-4"></i>
        <h4 class="text-muted">No Favorite Services Yet</h4>
        <p class="text-muted">Start browsing services and add them to your favorites!</p>
        <a href="/services" class="btn btn-primary">Browse Services</a>
      </div>
    </div>
  <% } %>
</div>

<%- include('../../partials/footer') %>
