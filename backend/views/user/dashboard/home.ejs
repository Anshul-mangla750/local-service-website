<%- include('./layout', { title: 'User Dashboard Home' }) %>

<div class="row mb-4">
  <div class="col-md-12">
    <h2 class="mb-4"><i class="fas fa-tachometer-alt"></i> User Dashboard Overview</h2>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-calendar-check fa-2x text-primary mb-2"></i>
        <h5 class="card-title">Upcoming Bookings</h5>
        <h2 class="text-primary"><%= upcomingBookings.length %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-history fa-2x text-success mb-2"></i>
        <h5 class="card-title">Past Bookings</h5>
        <h2 class="text-success"><%= pastBookings.length %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card text-center shadow-sm">
      <div class="card-body">
        <i class="fas fa-heart fa-2x text-danger mb-2"></i>
        <h5 class="card-title">Favorite Services</h5>
        <h2 class="text-danger"><%= favoriteServices.length %></h2>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-calendar"></i> Upcoming Bookings</h5>
      </div>
      <div class="card-body">
        <% if (upcomingBookings.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead class="table-light">
                <tr>
                  <th><i class="fas fa-tools"></i> Service</th>
                  <th><i class="fas fa-calendar"></i> Date</th>
                  <th><i class="fas fa-clock"></i> Time</th>
                  <th><i class="fas fa-info-circle"></i> Status</th>
                </tr>
              </thead>
              <tbody>
                <% upcomingBookings.forEach(b => { %>
                  <tr>
                    <td><%= b.serviceId.title %></td>
                    <td><%= new Date(b.date).toLocaleDateString() %></td>
                    <td><%= b.time %></td>
                    <td>
                      <% if (b.status === 'pending') { %>
                        <span class="badge bg-warning text-dark"><%= b.status %></span>
                      <% } else if (b.status === 'accepted') { %>
                        <span class="badge bg-info"><%= b.status %></span>
                      <% } else if (b.status === 'completed') { %>
                        <span class="badge bg-success"><%= b.status %></span>
                      <% } else if (b.status === 'rejected') { %>
                        <span class="badge bg-danger"><%= b.status %></span>
                      <% } else { %>
                        <span class="badge bg-secondary"><%= b.status %></span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center">
            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
            <p class="text-muted">No upcoming bookings.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="fas fa-heart"></i> Favorite Services</h5>
      </div>
      <div class="card-body">
        <% if (favoriteServices.length > 0) { %>
          <div class="row">
            <% favoriteServices.forEach(s => { %>
              <div class="col-md-6 mb-3">
                <div class="card h-100">
                  <% if (s.image && s.image.url) { %>
                    <img src="<%= s.image.url %>" class="card-img-top" alt="<%= s.title %>" style="height: 150px; object-fit: cover;">
                  <% } %>
                  <div class="card-body">
                    <h6 class="card-title"><%= s.title %></h6>
                    <p class="card-text text-muted">â‚¹<%= s.price %></p>
                    <a href="/services/<%= s._id %>" class="btn btn-sm btn-primary">View Details</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center">
            <i class="fas fa-heart-broken fa-3x text-muted mb-3"></i>
            <p class="text-muted">No favorite services yet.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
